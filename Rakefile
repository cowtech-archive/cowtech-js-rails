require "rubygems"
require "jeweler"
require "./lib/cowtech_js/version.rb"

Jeweler::Tasks.new do |gem|
	gem.name = "cowtech-js-rails"
	gem.homepage = "http://github.com/ShogunPanda/cowtech-js-rails"
	gem.license = "MIT"
	gem.summary = %Q{A set of Javascript libraries.}
	gem.description = %Q{A set of Javascript libraries.}
	gem.email = "shogun_panda@me.com"
	gem.authors = ["Shogun"]
	gem.version = CowtechJS::Version::STRING
	gem.files = Dir["{lib}/**/*", "{vendor}/**/*"]
	gem.add_dependency "sprockets"
	gem.add_dependency "coffee-script"
	gem.add_dependency "rails", ">= 3.1"
	gem.required_ruby_version = ">= 1.9.2"
end

Jeweler::RubygemsDotOrgTasks.new
